        <activity android:name=".PatientOftenActivity" />
        <activity android:name=".PatientPast1Activity" />
        <activity android:name=".PatientPast2Activity" />
        <activity android:name=".PatientPast3Activity" />
        <activity android:name=".PatientPast4Activity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>