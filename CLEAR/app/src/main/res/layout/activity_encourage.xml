<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".PatientInActivity">
    <RelativeLayout
        android:id="@+id/rl_info"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <Button
            android:id="@+id/btn_back_0"
            android:background="@drawable/back"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/text_idInfo"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:background="@color/primary"
            android:textSize="@dimen/text_title" />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_1"
        android:background="@drawable/encourage"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/rl_info"
        android:id="@id/rl_1"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="感谢您为抗击疫情做出的贡献，让我们一起加油！"
            android:id="@+id/tv_qt1"
            android:gravity="center"
            android:textSize="@dimen/text_title"
            android:layout_margin="20dp"
            android:textColor="@color/primary_text"
            />
        <Button
            android:layout_height="60dp"
            android:layout_width="180dp"
            android:id="@+id/btn_next"
            android:text="下一步"
            android:background="@color/primary"
            android:textColor="@color/primary_text"
            android:layout_toRightOf="@+id/tv_qt1"
            android:layout_margin="20dp"
            android:textSize="@dimen/text_title"/>
    </RelativeLayout>

</RelativeLayout>