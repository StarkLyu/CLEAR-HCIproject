<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".PatientInActivity">
    <TextView
        android:id="@+id/text_idInfo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="信息录入"
        android:background="@color/primary"
        android:textSize="@dimen/text_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="您最近两周是否有经常访问的地点?（如家庭，办公室等）"
        android:id="@+id/tv_qt1"
        android:layout_below="@id/text_idInfo"
        android:textSize="@dimen/text_title"
        android:layout_margin="20dp"
        android:textColor="@color/primary_text"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/buttonView"
        android:layout_below="@id/tv_qt1">

        <Button
            android:layout_height="60dp"
            android:layout_width="150dp"
            android:id="@+id/btn_yes"
            android:text="是"
            android:background="@color/primary"
            android:textColor="@color/primary_text"
            android:layout_margin="20dp"
            android:textSize="@dimen/text_title"/>
        <Button
            android:layout_height="60dp"
            android:layout_width="150dp"
            android:id="@+id/btn_no"
            android:text="否"
            android:background="@color/primary"
            android:textColor="@color/primary_text"
            android:layout_toRightOf="@+id/btn_yes"
            android:layout_margin="20dp"
            android:textSize="@dimen/text_title"/>
    </RelativeLayout>


</RelativeLayout>